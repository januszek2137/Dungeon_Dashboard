@* File: Views/Shared/_LayoutTailwind.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dungeon Dashboard</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&family=Spectral:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=IM+Fell+English:ital@0;1&display=swap" rel="stylesheet">

    <link href="css/newSite.css" rel="stylesheet" asp-append-version="true">

    <!-- Vue.js 3 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js" defer></script>
    <script src="~/js/magic-bg.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/icons/favicon.ico" />
</head>

<body>
<partial name="_Navbar" />

<div class="page-wrapper relative">
    <!-- Canvas behind the content -->


    <div class="background">
        <canvas id="fireflies"></canvas>
        @RenderBody()
        @* <partial name="_DiceRollerModal" /> *@
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</div>

</body>
</html>
