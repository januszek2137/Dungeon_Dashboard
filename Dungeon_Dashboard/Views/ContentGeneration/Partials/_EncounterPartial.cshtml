@model Dungeon_Dashboard.ContentGeneration.Models.RandomEncounter

<link rel="stylesheet" href="~/css/randomCharacterGenerator/contentPartials.css" />
<link rel="stylesheet" href="~/css/layout.css" />
<div class="content-container">
    <div class="card-encounter">
        <div class=" card encounter-header">
            <h3>⚔️ @Model.Name</h3>
            <p class="entity-description"><em>@Model.Description</em></p>
            <div class="card-content">
                <div class="stats-environment">
                    <p><span class="icon">📍</span><strong>Location:</strong> @Model.Location</p>
                    <p><span class="icon">🌦️</span><strong>Weather:</strong> @Model.Weather</p>
                </div>
                <div class="stats-environment">
                    <p><span class="icon">⏰</span><strong>Time:</strong> @Model.TimeOfDay</p>
                    <p><span class="icon">🌄</span><strong>Terrain:</strong> @Model.Terrain</p>
                </div>
            </div>
        </div>

        <div class="encounter-section encounter-npcs">
            <h4 class="title">🧑‍🤝‍🧑 Involved NPCs:</h4>
            @if (Model.InvolvedNPCs.Count > 0)
            {
                <div class="entity-grid">
                    @foreach (var npc in Model.InvolvedNPCs)
                    {
                        <div class="entity-item">
                            <div class="card card-npc">
                                <h5>🧙 @npc.Name</h5>
                                <div class="card-content">
                                    <div class="stats-primary">
                                        <p><span class="icon">🎭</span><strong>Role:</strong> @npc.Role</p>
                                        <p><span class="icon">🎚️</span><strong>Level:</strong> @npc.Level</p>
                                        <p><span class="icon">❤️</span><strong>HP:</strong> @npc.Health</p>
                                        <p><span class="icon">🛡️</span><strong>AC:</strong> @npc.ArmorClass</p>
                                    </div>
                                    <div class="stats-attributes">
                                        <table class="attributes-table">
                                            <tr>
                                                <td><span class="icon">💪</span><strong>STR:</strong> @npc.Strength</td>
                                                <td><span class="icon">🤸</span><strong>DEX:</strong> @npc.Dexterity</td>
                                            </tr>
                                            <tr>
                                                <td><span class="icon">🏋️</span><strong>CON:</strong> @npc.Constitution</td>
                                                <td><span class="icon">🧠</span><strong>INT:</strong> @npc.Intelligence</td>
                                            </tr>
                                            <tr>
                                                <td><span class="icon">👁️</span><strong>WIS:</strong> @npc.Wisdom</td>
                                                <td><span class="icon">🗣️</span><strong>CHA:</strong> @npc.Charisma</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="empty-state">No NPCs involved.</p>
            }
        </div>

        <div class="encounter-section encounter-monsters">
            <h4 class="title">🦖 Involved Monsters:</h4>
            @if (Model.InvolvedMonsters.Count > 0)
            {
                <div class="entity-grid">
                    @foreach (var monster in Model.InvolvedMonsters)
                    {
                        <div class="entity-item">
                            <div class="card card-monster">
                                <h5>🐲 @monster.Species</h5>
                                <div class="card-content">
                                    <div class="stats-primary">
                                        <p><span class="icon">🗺️</span><strong>Type:</strong> @monster.Type</p>
                                        <p><span class="icon">🎚️</span><strong>Level:</strong> @monster.Level</p>
                                        <p><span class="icon">❤️</span><strong>HP:</strong> @monster.Health</p>
                                        <p><span class="icon">🛡️</span><strong>AC:</strong> @monster.ArmorClass</p>
                                    </div>
                                    <div class="stats-secondary">
                                        <p><span class="icon">⚔️</span><strong>Damage:</strong> @monster.Damage</p>
                                        <p><span class="icon">✨</span><strong>Abilities:</strong> @monster.Abilities</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="empty-state">No Monsters involved.</p>
            }
        </div>
    </div>
</div>