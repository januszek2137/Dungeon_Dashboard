@{
    ViewData["Title"] = "Random Characters Dashboard";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/randomcharactergenerator.js"></script>
<link rel="stylesheet" href="~/css/randomcharactergenerator.css" />

<div class="container mt-5">
    <h1 class="text-center mb-4">Random Characters Dashboard</h1>

    <div class="d-flex justify-content-center mb-4">
        <div class="btn-group" role="group" aria-label="Character Actions">
            <button id="btnLoadNPC" class="btn btn-primary action-btn">🧙 Load Random NPC</button>
            <button id="btnLoadMonster" class="btn btn-danger action-btn">🐲 Load Random Monster</button>
            <button id="btnLoadEncounter" class="btn btn-warning action-btn">⚔️ Load Random Encounter</button>
        </div>
    </div>

    <div id="placeholder" class="text-center">
        <div class="placeholder p-5 border rounded bg-dark">
            <h3>Welcome to the Random Characters Dashboard</h3>
            <p class="">Click a button above to generate random NPCs, monsters, or encounters.</p>
        </div>
    </div>

    <div id="resultContainer" class="row g-4">
    </div>
</div>