@using Dungeon_Dashboard.Room.Models
@model RoomModel
@{
    ViewData["Title"] = "Create Room";
}
<link rel="stylesheet" href="~/css/style.css"/>
<link rel="stylesheet" href="~/css/rooms/rooms.css"/>
<link rel="stylesheet" href="~/css/rooms/create.css"/>
<link rel="stylesheet" href="~/css/forms.css"/>
<link rel="stylesheet" href="~/css/layout.css"/>

<div class="page-container">
    <h2 class="title">Create a room</h2>

    <div id="create-room" class="card form-new-room">
        <form asp-action="Create" method="post" id="createRoomForm">
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-input" placeholder="Room name" />
                <span asp-validation-for="Name" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-input" rows="4" placeholder="Room description"></textarea>
                <span asp-validation-for="Description" class="validation-error"></span>
            </div>
            <div class="form-links">
                <button type="submit" id="createRoomBtn" class="btn btn-submit">Create room</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
