@{
    ViewData["Title"] = "Turn Keeper";
}
<script src="~/js/turnkeeper.js"></script>
<link rel="stylesheet" href="~/css/TurnKeeper.css" />

<div id="turnKeeper">
    <h1 style="color: #ba9ffb;">Turn Keeper🔄 </h1>
    <hr />
    <div class="container" id="main">
    <form id="addParticipantForm" class="mb-3">
        <div class="form-group">
            <label for="participantName" style="color: #ba9ffb;">👤 Name</label>
            <input type="text" id="participantName" class="form-control" placeholder="Enter name" required />
        </div>
        <div class="form-group">
            <label for="participantInitiative" style="color: #ba9ffb;">⚡ Initiative</label>
            <input type="number" id="participantInitiative" class="form-control" placeholder="Enter initiative" required />
        </div>
        <div class="form-group">
            <label for="participantHealth" style="color: #ba9ffb;">❤️ Health</label>
            <input type="number" id="participantHealth" class="form-control" placeholder="Enter health" required />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Add Participant</button>
    </form>

    <table id="initiativeTable" class="table table-striped">
        <thead>
            <tr>
                <th style="color: #ba9ffb;">👤 Name</th>
                <th style="color: #ba9ffb;">⚡ Initiative</th>
                <th style="color: #ba9ffb;">❤️ Health</th>
                <th style="color: #ba9ffb;">🛠️ Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div class="modal fade" id="editHealthModal" tabindex="-1" aria-labelledby="editHealthLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editHealthLabel">Edit Health</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editHealthForm">
                        <div class="mb-3">
                            <label for="healthInput" class="form-label">❤️ New Health</label>
                            <input type="number" class="form-control" id="healthInput" min="0" required>
                        </div>
                        <button type="button" class="btn btn-primary btn-lg btn-group-lg" onclick="saveHealth()"
                                style="background-color: #4e4e9c;color: #ffffff;border: 1px solid #6a6abf; width:100%;">
                            Save
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <button id="nextTurn" class="btn btn-secondary">Next Turn</button>
    <button id="removeAllButton" class="btn btn-primary" onclick="removeAllParticipants()">Remove All</button>
    <div id="currentTurn" class="mt-3" style="color: #ba9ffb;"></div>
</div>
</div>