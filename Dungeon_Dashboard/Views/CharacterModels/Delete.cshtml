@using Dungeon_Dashboard.PlayerCharacters.Models
@model CharacterModel

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/character-models/CharacterDelete.css"/>
<link rel="stylesheet" href="~/css/style.css"/>
<link rel="stylesheet" href="~/css/layout.css"/>

<div class="delete-container">
    <div class="delete-header">
        <h1 class="title">Delete Character</h1>
        <h3>Are you sure you want to delete this character?</h3>
    </div>

    <div class="delete-content">
        <div class="info-card card">
            <div class="info-title title">Character Information</div>

            <div class="info-content">
                <div class="info-field">
                    <div class="field-name">Name:</div>
                    <div class="field-value">@Model.Name</div>
                </div>

                <div class="info-field">
                    <div class="field-name">Race:</div>
                    <div class="field-value">@Model.Race</div>
                </div>

                <div class="info-field">
                    <div class="field-name">Class:</div>
                    <div class="field-value">@Model.Class</div>
                </div>
                <div class="info-field">
                    <div class="field-name">Level:</div>
                    <div class="field-value">@Model.Level</div>
                </div>

            </div>
        </div>
        <div class="delete-actions">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id"/>
                <input type="submit" value="Delete Character" class="btn btn-danger"/>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
