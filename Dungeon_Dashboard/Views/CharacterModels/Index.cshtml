@using Dungeon_Dashboard.PlayerCharacters.Models
@model IEnumerable<CharacterModel>

@{
    ViewData["Title"] = "Characters";
    Layout = "_NewLayout";
}

<link rel="stylesheet" href="~/css/character-models/CharacterIndex.css"/>
<link rel="stylesheet" href="~/css/layout.css"/>
<link rel="stylesheet" href="~/css/style.css"/>

<div class="characters-container">

    <div class="characters-header">
        <h1 class="characters-title title">Characters</h1>
        <a asp-action="Create" class="btn btn-primary">✨ Create New Character</a>
    </div>

    <div class="character-grid">
        @{
            var userNameFull = User.Identity.Name;
            var userName = "";
            if (!string.IsNullOrEmpty(userNameFull))
            {
                userName = userNameFull.Split('@')[0];
            }

            var userCharacters = Model.Where(item => item.CreatedBy == userName);
        }

        @if (!userCharacters.Any())
        {
            <div class="card">
                <h2>No Characters Found</h2>
                <p>You haven't created any characters yet. Click "Create New Character" to get started on your
                    adventure!</p>
            </div>
        }
        else
        {
            @foreach (var item in userCharacters)
            {
                var emoji = item.Class switch
                {
                    Classes.Barbarian => "💪",
                    Classes.Bard => "🎵",
                    Classes.Cleric => "🙏",
                    Classes.Druid => "🌿",
                    Classes.Fighter => "⚔️",
                    Classes.Monk => "🧘",
                    Classes.Paladin => "🛡️",
                    Classes.Ranger => "🏹",
                    Classes.Rogue => "🗡️",
                    Classes.Sorcerer => "✨",
                    Classes.Warlock => "🔮",
                    Classes.Wizard => "📖",
                    _ => "❓"
                };

                <div class="card card-character">
                    <div class="character-header">
                        <h2 class="character-name">@item.Name</h2>
                        <span class="character-emoji">@emoji</span>
                    </div>

                    <div class="character-info">
                        <p><span class="icon">@emoji</span><strong>Class:</strong> @item.Class</p>
                        <p><span class="icon">📈</span><strong>Level:</strong> @item.Level</p>
                    </div>

                    <div class="character-actions">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">
                            <span class="icon">✏️</span> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">
                            <span class="icon">👁️</span> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <span class="icon">🗑️</span> Delete
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</div>