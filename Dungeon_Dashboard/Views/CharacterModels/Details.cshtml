        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gold)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gold)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Platinum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Platinum)
        </dd>
    </dl>
</div>
