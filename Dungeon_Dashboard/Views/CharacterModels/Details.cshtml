@using Dungeon_Dashboard.PlayerCharacters
@using Dungeon_Dashboard.PlayerCharacters.Models
@model CharacterModel

@{
    ViewData["Title"] = "Character Details";
}
<link rel="stylesheet" href="/css/CharacterDetails.css" />
<div class="character-details">
    <h1 class="character-header text-center">
        <span class="character-name badge custom-primary">@Model.Name</span>
        <span class="character-class badge custom-secondary">@Model.Class</span>
        <span class="character-race badge custom-secondary">@Model.Race</span>
    </h1>

    <div class="row">
        <div class="col-md-6">
            <h3 class="section-title">Stats</h3>
            <ul class="list-group">
                <li class="list-group-item">
                    💪 Strength: <strong>@Model.Strength</strong>
                </li>
                <li class="list-group-item">
                    🤸 Dexterity: <strong>@Model.Dexterity</strong>
                </li>
                <li class="list-group-item">
                    🏋️ Constitution: <strong>@Model.Constitution</strong>
                </li>
                <li class="list-group-item">
                    🧠 Intelligence: <strong>@Model.Intelligence</strong>
                </li>
                <li class="list-group-item">
                    🦉 Wisdom: <strong>@Model.Wisdom</strong>
                </li>
                <li class="list-group-item">
                    😎 Charisma: <strong>@Model.Charisma</strong>
                </li>
            </ul>
        </div>

        <div class="col-md-6">
            <h3 class="section-title">Skills, Equipment & Inventory</h3>
            <ul class="list-group">
                <li class="list-group-item">
                    <strong>Skills:</strong> @string.Join(", ", Model.Skills ?? new string[] { "None" })
                </li>
                <li class="list-group-item">
                    <strong>Equipment:</strong> @string.Join(", ", Model.Equipment ?? new string[] { "None" })
                </li>
                <li class="list-group-item">
                    <strong>Inventory:</strong> @string.Join(", ", Model.Inventory ?? new string[] { "None" })
                </li>
            </ul>


            <h3 class="section-title">Currency</h3>
            <ul class="list-group">
                <li class="list-group-item">🪙 Copper: <strong>@Model.Copper</strong></li>
                <li class="list-group-item">🥈 Silver: <strong>@Model.Silver</strong></li>
                <li class="list-group-item">⚡ Electrum: <strong>@Model.Electrum</strong></li>
                <li class="list-group-item">🏆 Gold: <strong>@Model.Gold</strong></li>
                <li class="list-group-item">💎 Platinum: <strong>@Model.Platinum</strong></li>
            </ul>
        </div>
    </div>

    <div class="actions mt-4 text-center">
        <a href="@Url.Action("Edit", "CharacterModels", new { id = Model.Id })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("GenerateCharacterPdf", "CharacterModels", new{ id=Model.Id })" class="btn btn-primary">Generate PDF</a>
        <a href="@Url.Action("Index", "CharacterModels")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
