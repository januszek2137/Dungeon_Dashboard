@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "_NewLayout";
}

<link rel="stylesheet" href="~/css/newSite.css"/>
<link rel="stylesheet" href="~/css/auth/AuthForm.css"/>

<div class="form-container">
    <div class="form-card">
        <h1 class="form-title">@ViewData["Title"]</h1>
        <p class="form-subtitle">Enter your new password to regain access</p>
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            
            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">New Password</label>
                <input asp-for="Input.Password" class="form-input" type="password" autocomplete="new-password" aria-required="true" placeholder="Enter your new password" />
                <span asp-validation-for="Input.Password" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-input" type="password" autocomplete="new-password" aria-required="true" placeholder="Confirm your new password" />
                <span asp-validation-for="Input.ConfirmPassword" class="validation-error"></span>
            </div>
            
            <button type="submit" class="btn-submit">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
