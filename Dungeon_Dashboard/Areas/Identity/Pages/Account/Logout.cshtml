@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body text-center">
                    @if(User.Identity?.IsAuthenticated ?? false) {
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger btn-lg mt-3">Logout</button>
                        </form>
                    } else {
                        <div class="alert alert-success mt-3" role="alert">
                            You have successfully logged out of the application.
                        </div>
                        <a href="/" class="btn btn-secondary btn-lg mt-3">Return to Home</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
