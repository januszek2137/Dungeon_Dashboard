@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_NewLayout";
}
<link rel="stylesheet" href="~/css/auth/Login.css" />
<link rel="stylesheet" href="~/css/newSite.css" />
<link rel="stylesheet" href="~/css/auth/AuthForm.css"/>


<div class="form-container">
    <div class="form-card">
        <h1 class="form-title">@ViewData["Title"]</h1>
        <p class="form-subtitle">Use your account to enter the realm</p>
        
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>
                
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="validation-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-input" type="password" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="validation-error"></span>
                </div>
                
                <div class="form-checkbox">
                    <input class="checkbox-input" asp-for="Input.RememberMe" type="checkbox" />
                    <label asp-for="Input.RememberMe" class="checkbox-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                
                <div class="form-actions">
                    <button id="login-submit" type="submit" class="btn-submit">Enter the Dungeon</button>
                </div>
                
                <div class="form-links">
                    <a class="link" asp-page="./ForgotPassword">Forgot your password?</a>
                    <a class="link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    <a class="link" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </div>
            </form>
        </section>
    </div>
</div>

<style>
    
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}